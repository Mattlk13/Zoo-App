<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_background"
    tools:context="com.zoovisitors.pl.MainActivity"
    tools:layout_editor_absoluteY="56dp">

    <LinearLayout
        android:id="@+id/main_activity_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/main_background"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/feedWall"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:scrollbars="vertical">

                <LinearLayout
                    android:id="@+id/feedWallLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/feedWallButton"
                style="@style/ButtonNegevZooStyle"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/button_shape"
                android:text="@string/watch_all_feed" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.zoovisitors.pl.customViews.MainButtonCustomView
                android:id="@+id/personalStoriesButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/schedule" />

            <com.zoovisitors.pl.customViews.MainButtonCustomView
                android:id="@+id/enclosureListButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/our_enclosures"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zoovisitors.pl.customViews.MainButtonCustomView
                android:id="@+id/scheduleButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/schedule" />

            <com.zoovisitors.pl.customViews.MainButtonCustomView
                android:id="@+id/mapButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/map" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zoovisitors.pl.customViews.MainButtonCustomView
                android:id="@+id/otherInfoButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/map" />

            <com.zoovisitors.pl.customViews.MainButtonCustomView
                android:id="@+id/wazeButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/map" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>

