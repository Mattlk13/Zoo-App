<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zoovisitors.pl.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="558dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/feedWall"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:scrollbars="vertical"

            >

            <LinearLayout
                android:id="@+id/feedWallLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/feedWallButton"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:onClick="onClickWatchAllButton"
            android:text="@string/watch_all_feed" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:onClick="onClickEnclosuresButton"
                android:text="@string/schedule" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:onClick="onClickScheduleButton"
                android:text="@string/our_enclosures" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:onClick="onClickMoreInfoButton"
                android:text="@string/other_info" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:onClick="onClickMapButton"
                android:text="@string/map" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
