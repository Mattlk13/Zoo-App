<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.zoovisitors.pl.enclosures.EnclosureActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/enclosureName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/enclosureImage"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@color/cardview_light_background" />

                <TextView
                    android:id="@+id/closesEvent"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:textColor="@android:color/black"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/shareOnFacebookText"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/shareOnFacebook" />

                    <ImageView
                        android:id="@+id/shareOnFacebookImage"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/facebook_icon" />

                    <TextView
                        android:id="@+id/placeHolderText"
                        android:layout_width="68dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/showOnMap"
                        android:layout_width="32dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/showOnMap" />

                    <ImageView
                        android:id="@+id/mapIconImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@mipmap/show_on_map" />

                </LinearLayout>

                <TextView
                    android:id="@+id/enc_story_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <com.zoovisitors.pl.customViews.TextViewOutline
                    android:id="@+id/enc_who_lives_here"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/whoLives"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/animal_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/enc_assets_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/assets"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <GridLayout
                    android:id="@+id/enc_asset_grid_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnCount="3">

                </GridLayout>

            </LinearLayout>
        </ScrollView>

</LinearLayout>
