<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.zoovisitors.pl.MainActivity"
    tools:layout_editor_absoluteY="56dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rectangle_border"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/feedWall"
                android:layout_width="match_parent"
                android:layout_height="150dp"

                android:layout_margin="3dp"
                android:scrollbars="vertical">

                <LinearLayout
                    android:id="@+id/feedWallLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/feedWallButton"
                style="@style/ButtonNegevZooStyle"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/button_shape"
                android:text="@string/watch_all_feed" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zoovisitors.pl.customViews.buttonCustomView
                android:id="@+id/personalStoriesButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/schedule" />

            <com.zoovisitors.pl.customViews.buttonCustomView
                android:id="@+id/enclosureListButton"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/our_enclosures"
                android:textAllCaps="false" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.zoovisitors.pl.customViews.buttonCustomView
                android:id="@+id/scheduleButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/schedule" />

            <com.zoovisitors.pl.customViews.buttonCustomView
                android:id="@+id/mapButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/map" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zoovisitors.pl.customViews.buttonCustomView
                android:id="@+id/otherInfoButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/map" />

            <com.zoovisitors.pl.customViews.buttonCustomView
                android:id="@+id/wazeButton"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:text="@string/map" />

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>

