<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zoovisitors">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/monkeys_enclosure"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/monkeys_enclosure"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".pl.animalActivity.AnimalActivity"
            android:label="@string/title_activity_animal"></activity>

        <activity android:name=".pl.MainActivity">
            android:name=".pl.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".pl.EnclosureActivity" />
        <activity android:name=".pl.MapActivity" />

        <activity
            android:name=".pl.GeneralInfo.GeneralInfoActivity"
            android:label="@string/title_activity_general_info"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>


        <activity android:name=".pl.EnclosureListActivity"></activity>
    </application>

</manifest>