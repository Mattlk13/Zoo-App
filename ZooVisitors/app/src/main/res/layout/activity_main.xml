<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zoovisitors.pl.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <ScrollView
            android:id="@+id/feedWall"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:scrollbars="vertical"

            >

            <LinearLayout
                android:id="@+id/feedWallLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/feedWallButton"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:text="@string/watch_all_feed"
            android:onClick="onClickWatchAllButton"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="@string/schedule"
                android:onClick="onClickEnclosuresButton"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="@string/our_enclosures"
                android:onClick="onClickScheduleButton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="@string/other_info"
                android:onClick="onClickMoreInfoButton"/>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="@string/map"
                android:onClick="onClickMapButton"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
